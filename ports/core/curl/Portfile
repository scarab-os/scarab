# Description: URL transfer tool and library
# URL: https://curl.se
# Depends: mbedtls zlib

name=curl
version=8.18.0
source=https://curl.se/download/curl-$version.tar.xz

build() {
    cd $name-$version
    ./configure \
        --host=$CROSS \
        --prefix=/usr \
        --with-mbedtls \
        --without-libpsl \
        --disable-shared \
        --enable-static \
        --disable-ldap \
        --disable-manual \
        CFLAGS="-Os -I$SYSROOT/usr/include" \
        LDFLAGS="-static -L$SYSROOT/usr/lib"
    make -j$(nproc)
    make DESTDIR=$PKG install-strip
}
