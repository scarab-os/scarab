# Description: Compression library
# URL: https://zlib.net
# Depends:

name=zlib
version=1.3.1
source=https://zlib.net/fossils/zlib-$version.tar.gz

build() {
    cd $name-$version
    CFLAGS="-Wno-error" CC=$CC CHOST=$CROSS ./configure --prefix=/usr --static
    make -j$(nproc)
    make DESTDIR=$PKG install
}
