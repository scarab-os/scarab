# Description: Terminal handling library
# URL: https://invisible-island.net/ncurses/
# Depends:

name=ncurses
version=6.6
source=https://ftp.gnu.org/gnu/ncurses/ncurses-$version.tar.gz

build() {
    cd $name-$version
    ./configure \
        --host=$CROSS \
        --prefix=/usr \
        --without-debug \
        --without-shared \
        --with-normal \
        --enable-widec \
        --without-cxx-binding \
        --without-ada \
        --disable-stripping
    make -j$(nproc)
    make DESTDIR=$PKG install
}
