# Description: GNU make build tool
# URL: https://www.gnu.org/software/make/
# Depends:

name=make
version=4.4.1
source=https://ftp.gnu.org/gnu/make/make-$version.tar.gz

build() {
    cd $name-$version
    ./configure --host=$CROSS --prefix=/usr --disable-nls --without-guile \
        CFLAGS="-Os -std=gnu89 -Wno-error" LDFLAGS="-static"
    sed -i 's|#define getenv.*||' glob/fnmatch.c 2>/dev/null || true
    make -j$(nproc)
    mkdir -p $PKG/usr/bin
    cp make $PKG/usr/bin/make
}
