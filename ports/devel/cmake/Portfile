# Description: Cross-platform build system
# URL: https://cmake.org
# Depends: curl ncurses

name=cmake
version=4.2.3
source=https://github.com/Kitware/CMake/releases/download/v$version/cmake-$version.tar.gz

build() {
    cd $name-$version

    ./bootstrap \
        --prefix=/usr \
        --parallel=$(nproc) \
        --system-curl \
        --no-qt-gui \
        -- -DCMAKE_USE_OPENSSL=OFF

    make -j$(nproc)
    make DESTDIR=$PKG install
}
